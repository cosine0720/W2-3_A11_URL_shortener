<form action="/" method="POST">
  <div class="mt-5 mb-3">
    <input type="url" class="form-control" id="url" name="url" placeholder="請填入網站連結..." value={{url}}>
  </div>
  <div class="text-center mt-4 mb-5">
    {{#if shortURL}}

      <div class="alert alert-warning" role="alert">
        <span class="mr-2 fs-5">您 的 網 址 已 縮 短 ： </span> <code class="fs-3">{{origin}}/{{shortURL}}</code>
      </div>

    {{/if}}

    <button type="submit" class="btn btn-primary col-3">👉 縮 起 來 ！👈</button>
  </div>
  
</form>

